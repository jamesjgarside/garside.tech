---
layout: base.njk
---
<article class="post">
  <header>
    <h1>{{ title }}</h1>
    <p class="meta">
      <time datetime="{{ date | rfc3339Date }}">{{ date | readableDate }}</time>
      {% if tags %}
      <span class="tags">
        {% for tag in tags %}
        <a href="/blog/#{{ tag }}" class="tag">{{ tag }}</a>
        {% endfor %}
      </span>
      {% endif %}
    </p>
  </header>
  
  <div class="content">
    {{ content | safe }}
  </div>
</article>
