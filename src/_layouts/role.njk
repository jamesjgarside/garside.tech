---
layout: base.njk
---
<article class="role">
  <header>
    <h1>{{ title }}</h1>
    <p class="meta">
      <span class="company">{{ company }}</span>
      <span class="dates">{{ startDate | readableDate }} - {{ endDate | readableDate }}</span>
    </p>
  </header>
  
  <div class="content">
    {{ content | safe }}
  </div>
  
  {% if relatedPosts %}
  <aside class="related">
    <h2>Related Writing</h2>
    <ul>
      {% for post in collections.blog %}
        {% if relatedPosts.includes(post.fileSlug) %}
        <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>
  </aside>
  {% endif %}
</article>
